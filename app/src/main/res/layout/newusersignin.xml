<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:gravity="center"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_gravity="center"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/imageView4"
               android:layout_width="100dp"

               android:layout_height="100dp"
               app:srcCompat="@drawable/appicon" />
           <LinearLayout
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_marginLeft="5dp"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:text="@string/app_name"
                   android:textSize="20sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

               </TextView>
               <TextView
                    android:text="Beauty Brand"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

               </TextView>
           </LinearLayout>


       </LinearLayout>


       <com.google.android.material.textfield.TextInputLayout
           android:layout_marginTop="20dp"
           app:hintAnimationEnabled="true"
           android:id="@+id/textinputunsername"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.google.android.material.textfield.TextInputEditText
              android:textColorHint="@color/design_default_color_error"
               app:hintAnimationEnabled="true"
               android:backgroundTint="#ffffff"
               android:layout_width="match_parent"
               android:hint="Email / username"
               android:layout_height="wrap_content"/>

       </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            app:passwordToggleTint="@color/design_default_color_error"
            app:passwordToggleEnabled="true"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                app:passwordToggleEnabled="true"
                app:hintAnimationEnabled="true"
                android:textColorHint="@color/design_default_color_error"
                android:backgroundTint="#ffffff"
                android:id="@+id/textinputpassword"
                android:layout_width="match_parent"
                android:hint="passowrd"
                android:layout_height="wrap_content">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:id="@+id/t_forgetpassword"
            android:text="Forget Password?   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatTextView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_login"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:text="Login "
            android:backgroundTint="#FF6600"
            android:layout_height="wrap_content">

        </com.google.android.material.button.MaterialButton>
       <TextView
           android:layout_marginTop="30dp"
           android:layout_gravity="center"
           android:text="OR connect with "
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

       </TextView>
        <LinearLayout
           android:layout_gravity="center"
           android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/lsgmail"
                android:background="@drawable/google"
                android:layout_width="50dp"
                android:layout_height="50dp">

            </ImageButton>
            <ImageButton
                android:id="@+id/lsfacebbok"
                android:background="@drawable/facebook"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp">

            </ImageButton>
            <ImageButton
                android:id="@+id/lstwitter"
                android:background="@drawable/twitter"

                android:layout_width="50dp"
                android:layout_height="50dp">

            </ImageButton>


        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t_signup"
            android:gravity="center"
            android:text="Don't hav an account ? Signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>



</RelativeLayout>